# 		ngx.say(result)
# 		';
# 	}

# 	location ~ /docker/(.*) {
# 		set \$command \$1;
# 		rds_json on;
# 		content_by_lua '
# 			local handle, error = io.popen("/usr/bin/docker " .. ngx.var.command)
# 			-- local result = handle:read("*a")
