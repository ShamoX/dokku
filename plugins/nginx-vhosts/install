# 				local item = {}
# 				if line_idx == 0 then
# 					for i in string.gmatch(line, "[^%s]+") do
# 					headers[pos_idx] = i
# 					pos_idx = pos_idx + 1
# 					end
# 				else
# 					for i in string.gmatch(line, "[^%s]+") do
# 					--	item[headers[pos_idx]] = i
# 					headers[pos_idx] = i
